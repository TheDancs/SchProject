<UserControl x:Class="SchProject.Resources.Layout.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchProject.Resources.Layout"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding Source={StaticResource Locator}, Path=Chat}">
    <Grid>
        <Button Content="Send" Command="{Binding SendMessageCommand}" CommandParameter="{Binding Path=Message}" HorizontalAlignment="Left" Height="30" Margin="81,260,0,0" VerticalAlignment="Top" Width="133"/>
        <TextBox HorizontalAlignment="Left" Height="48" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="280" Margin="10,207,0,0"/>
        <ListBox ItemsSource="{Binding Path=Messages}" HorizontalAlignment="Left" Height="182" Margin="10,20,0,0" VerticalAlignment="Top" Width="280"/>

    </Grid>
</UserControl>
