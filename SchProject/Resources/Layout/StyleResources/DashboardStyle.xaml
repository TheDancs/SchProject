                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"
                                            DataContext="{Binding}">
                        <Border Background="{Binding (ItemsControl.Background),RelativeSource={RelativeSource TemplatedParent}}"
                                Height="25"
                                Padding="0"
                                VerticalAlignment="Center"
                                BorderThickness="0,0,1,1"
                                BorderBrush="#CFCFCF">
                            <Label Content="{Binding ID}"
                                   Foreground="#545454"
                                   Height="25"
                                   FontSize="12"
                                   VerticalContentAlignment="Center"
                                   HorizontalContentAlignment="Center"
                                   Width="120" />
                        </Border>
                        <Border Background="{Binding (ItemsControl.Background),RelativeSource={RelativeSource TemplatedParent}}"
                                BorderThickness="0,0,1,1"
                                Height="25"
                                BorderBrush="#CFCFCF">
                            <Label Content="{Binding Question}"
                                   Width="280"
                                   Height="25"
                                   FontSize="12"
                                   Foreground="#545454"
                                   HorizontalContentAlignment="Center" />
                        </Border>
                        <Border Background="{Binding (ItemsControl.Background),RelativeSource={RelativeSource TemplatedParent}}"
                                BorderThickness="0,0,0,1"
                                Height="25"
                                BorderBrush="#CFCFCF">
                            <Label Content="{Binding Status}"
                                   Width="93"
                                   Height="25"
                                   FontSize="12"
                                   Foreground="{Binding Status,Converter={StaticResource TicketStatusToBrushConverter}}"
                                   HorizontalContentAlignment="Center" />
                        </Border>
                    </VirtualizingStackPanel>
                    <DataTemplate.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex"
                                 Value="0">
                            <Setter Property="ItemsControl.Background"
                                    Value="White" />
                        </Trigger>
                        <Trigger Property="ItemsControl.AlternationIndex"
                                 Value="1">
                            <Setter Property="ItemsControl.Background"
                                    Value="#FBFBFB" />
                        </Trigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="HeaderedItemsControl">
                    <Border CornerRadius="8"
                            Background="{TemplateBinding Background}">
                        <StackPanel>
                            <ContentPresenter ContentSource="Header" />
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#FBFBFB"
                                        Height="25"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        BorderThickness="0,1,1,1"
                                        BorderBrush="#CFCFCF">
                                    <Label Content="Azonosító"
                                           Foreground="#545454"
                                           Height="25"
                                           FontSize="12"
                                           VerticalContentAlignment="Center"
                                           HorizontalContentAlignment="Center"
                                           Width="120" />
                                </Border>
                                <Border Background="#FBFBFB"
                                        BorderThickness="0,1,1,1"
                                        Height="25"
                                        BorderBrush="#CFCFCF">
                                    <Label Content="Üzenet"
                                           Width="260"
                                           Height="25"
                                           FontSize="12"
                                           Foreground="#545454"
                                           Margin="20,0,0,0"
                                           HorizontalContentAlignment="Left" />
                                </Border>
                                <Border Background="#FBFBFB"
                                        BorderThickness="0,1,0,1"
                                        Height="25"
                                        BorderBrush="#CFCFCF">
                                    <Label Content="Állapot"
                                           Width="93"
                                           Height="25"
                                           FontSize="12"
                                           Foreground="#747474"
                                           HorizontalContentAlignment="Center" />
                                </Border>
                            </StackPanel>
                            <ItemsPresenter />
                        </StackPanel>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0"
                                              Direction="0"
                                              BlurRadius="5"
                                              Opacity="0.2" />
                        </Border.Effect>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
