    </Style>
    <Style TargetType="Ellipse" x:Key="ImageHolder">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Direction="0 " ShadowDepth="0" BlurRadius="40" Opacity=".18" />
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="#6A99B5"/>
